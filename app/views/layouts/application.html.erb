<!DOCTYPE html>
<html>
<head>
  <%= yield :head %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<script src="https://use.fontawesome.com/c560c025cf.js"></script>
<div class="jumbotron">
  <div class="container text-center">
    <h1>Online Store</h1>
    <p>Mission, Vission & Values</p>
  </div>
</div>

<ul class="nav">
</ul>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <ul class="navbar-nav">
    <li class="nav-item <%= 'active' if current_page?(catalog_index_path) %>">
      <a class="nav-link" href='<%= catalog_index_path %>'>Home</a>
    </li>
    <li class="nav-item <%= 'active' if current_page?(products_path) %>">
      <a class="nav-link" href='<%= products_path %>'>Products</a>
    </li>
  </ul>

  <ul class="navbar-nav ml-auto">
    <li class="nav-item <%= 'active' if false %>">
      <a class="nav-link" href='#'>Account</a>
    </li>
    <a class="navbar-separator">|</a>
    <li class="nav-item <%= 'active' if request.fullpath.start_with?('/carts') %>">
      <a class="nav-link" href='<%= carts_path %>' id="cartLink"> Cart </a>
    </li>
  </ul>
</nav>
<%= yield %>
</body>
</html>
