<% content_for :head do %>
  <title>Show all products</title>
<% end %>
<div class="container-fluid text-justify customFont1">
  <div class="row content">
    <br>
  </div>
  <div class="row content">
    <div class="col-sm-1 sidenav">
    </div>

    <div class="col-sm-10">
      <p id="notice"><%= notice %></p>

      <table class="table">
        <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @products.each do |product| %>
          <tr>
            <td style="width: 13%" %><%= product.title %></td>
            <td style="width: 55%"><%= product.description %></td>
            <td style="width: 10%"><img src=<%= product.image_url %> width='100', height='100'/></td>
            <td style="width: 10%"><%= product.price %> â‚¬</td>
            <td style="width: 4%"><%= link_to 'Show', product %></td>
            <td style="width: 4%"><%= link_to 'Edit', edit_product_path(product) %></td>
            <td style="width: 4%"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Product', new_product_path %>
    </div>
    <div class="col-sm-1 sidenav">
    </div>
  </div>
  <div class="row content">
    <br>
    <br>
    <br>
  </div>
</div>
