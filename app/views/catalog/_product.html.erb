<div class="row content">
  <div class="col-sm-4">
    <img src=<%= product.image_url %> width='200', height='200'/>
  </div>
  <div class="col-sm-8">
    <h5> <%= product.title %> </h5>
    <br>
    <p> <%= product.description %> </p>
    <div class="row content">
      <div class="col-sm-2">
        <h6> <%= number_to_currency(product.price) %> </h6>
      </div>
      <div class="col-sm-10">
        <%= button_to "Add to Cart", line_items_path(product_id: product.id), class: "btn btn-lg btn-primary btn-sm", remote: true%>
      </div>
    </div>
    </div>
  </div>
  <hr/>
